{
  "functions": {
    "src/app/api/generate-pdf/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/matching/scan/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/matching/auto-import/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/monitoring-crawler/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/matching/scan?secret=$CRON_SECRET",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/matching/auto-import?secret=$CRON_SECRET&maxCandidates=24&offset=0",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/matching/auto-import?secret=$CRON_SECRET&maxCandidates=24&offset=24",
      "schedule": "15 4 * * *"
    },
    {
      "path": "/api/matching/auto-import?secret=$CRON_SECRET&maxCandidates=24&offset=48",
      "schedule": "30 4 * * *"
    },
    {
      "path": "/api/matching/auto-import?secret=$CRON_SECRET&maxCandidates=24&offset=72",
      "schedule": "45 4 * * *"
    },
    {
      "path": "/api/cron/monitoring-crawler",
      "schedule": "0 6 * * *"
    }
  ],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  }
}