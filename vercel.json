{
  "rewrites": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "support.celeropress.com"
        }
      ],
      "destination": "/support/:path*"
    }
  ],
  "functions": {
    "src/app/api/generate-pdf/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/matching/scan/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/matching/auto-import/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/monitoring-crawler/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/cleanup-pending-signups/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/pr/email/cron/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/reporting/cron/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/reporting/send-now/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/matching/scan?secret=$CRON_SECRET",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/matching/auto-import?secret=$CRON_SECRET&maxCandidates=24",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/monitoring-crawler",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/cleanup-pending-signups",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/pr/email/cron?secret=$CRON_SECRET",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/reporting/cron?secret=$CRON_SECRET",
      "schedule": "0 7 * * *"
    }
  ],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  }
}