# ========================================
# Firebase Configuration (Client-Side)
# ========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ========================================
# Firebase Admin SDK (Server-Side)
# ========================================
# Service Account JSON als einzeilige Zeichenkette
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'

# ========================================
# Gemini AI / Genkit
# ========================================
GEMINI_API_KEY=your-gemini-api-key

# ========================================
# SendGrid Email Service
# ========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# ========================================
# Stripe Integration (Phase 1)
# ========================================

# Stripe Secret Key (Server-Side ONLY)
STRIPE_SECRET_KEY=sk_test_xxx

# Stripe Publishable Key (Client-Side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Webhook Secret (für Webhook Signature Verification)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ========================================
# Stripe Price IDs (Phase 2)
# Diese IDs müssen nach Erstellen der Products in Stripe eingetragen werden
# Siehe: docs/stripe/phase-1-stripe-setup.md
# ========================================

# STARTER Tier
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_YEARLY=price_xxx

# BUSINESS Tier
STRIPE_PRICE_BUSINESS_MONTHLY=price_xxx
STRIPE_PRICE_BUSINESS_YEARLY=price_xxx

# AGENTUR Tier
STRIPE_PRICE_AGENTUR_MONTHLY=price_xxx
STRIPE_PRICE_AGENTUR_YEARLY=price_xxx

# ========================================
# Application URLs
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
